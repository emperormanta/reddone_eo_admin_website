  <div class="container">
    <div class="rev_slider_wrapper col-md-12">
      <div id="rev_slider_1" class="rev_slider">
       <ul class="tp-revslider">
          <li  data-transition="fade">
            <%= image_tag "slider/slide1.jpg" %>
          </li>
          <li  data-transition="fade">
            <%= image_tag "slider/slide2.jpg" %>
          </li>
          <li  data-transition="fade">
            <%= image_tag "slider/slide3.jpg" %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
<script>
  jQuery(document).ready(function() {
    jQuery('#rev_slider_1').show().revolution({
      delay: 3000,
      startheight:500,
      
      hideThumbs:10,
      
      navigationType:"none",	
      
      
      hideArrowsOnMobile:"on",
      
      touchenabled:"on",
      onHoverStop:"on",
      
      navOffsetHorizontal:0,
      navOffsetVertical:20,
      
      stopAtSlide:-1,
      stopAfterLoops:-1,

      shadow:0,
      
      fullWidth:"on",
      fullScreen:"off"
    });
  });
</script>