<script type="text/javascript" >

// SLIDER REVOLUTION Java Script
  jQuery(document).ready(function() {
    jQuery('.tp-banner').revolution(
      {
        delay:9000,
        startheight:500,
        
        hideThumbs:10,
        
        navigationType:"none",	
        
        
        hideArrowsOnMobile:"on",
        
        touchenabled:"on",
        onHoverStop:"on",
        
        navOffsetHorizontal:0,
        navOffsetVertical:20,
        
        stopAtSlide:-1,
        stopAfterLoops:-1,

        shadow:0,
        
        fullWidth:"on",
        fullScreen:"off"
      });
    });
  </script>